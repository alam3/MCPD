@page
@model NorthwindWeb.Pages.SuppliersModel // sets the Razor Page model
<!-- Add tag helpers for adding in an input form, e.g. 'asp-for' -->
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr><th>Company Name</th></tr>
        </thead>
        <tbody>
            @foreach (string name in Model.Suppliers) // using C#, gets the value in the array defined in suppliers.cshtml.cs
            {
                <tr><td>@name</td></tr>
            }
        </tbody>
    </table>
</div>

<!-- Form allowing a user to insert a new supplier -->
<div class="row">
    <p>Enter a name for a new supplier:</p>
    <form method="POST">
        <!-- 'asp-for' tag helper enables data binding to the model behind the Razor page -->
        <div><input asp-for="Supplier.CompanyName" /></div>
        <input type="submit" />
    </form>
</div>