@page
@model NorthwindWeb.Pages.SuppliersModel // sets the Razor Page model
<!-- Add tag helpers for adding in an input form, e.g. 'asp-for' -->
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Packt.Shared

<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr><th>Company Name</th></tr>
        </thead>
        <tbody>
            @foreach (Supplier item in Model.Suppliers) {
                <tr><td>@item.CompanyName</td><td>@item.Country</td><td>@item.Phone</td></tr>
            }
        </tbody>
    </table>
</div>

<!-- Form allowing a user to insert a new supplier -->
<div class="row">
    @* <p>Enter a name for a new supplier:</p> *@
    <form method="POST">
        <!-- 'asp-for' tag helper enables data binding to the model behind the Razor page -->
        <p>Enter a name for a new supplier:</p>
        <div><input asp-for="Supplier.CompanyName" /></div>
        <p>Enter a country for a new supplier:</p>
        <div><input asp-for="Supplier.Country" /></div>
        <p>Enter a phone for a new supplier:</p>
        <div><input asp-for="Supplier.Phone" /></div>
        <input type="submit" />
    </form>
</div>